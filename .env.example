# AppSec Platform Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# For production nginx (only used with --profile production)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (recommended for production)
POSTGRES_USER=appsec
POSTGRES_PASSWORD=change_this_to_secure_password
POSTGRES_DB=appsec_db
POSTGRES_PORT=5432

# Database URL
# For SQLite (development only):
# DATABASE_URL=sqlite:///app/data/appsec.db

# For PostgreSQL (production - auto-constructed from above vars in docker-compose):
# DATABASE_URL=postgresql://appsec:password@postgres:5432/appsec_db

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# CORS Origins (comma-separated, update with your domain)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:80,http://localhost:5173,http://localhost:5174

# Log Level (debug, info, warning, error, critical)
LOG_LEVEL=info

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================

# Anthropic Claude API Key
ANTHROPIC_API_KEY=

# OpenAI API Key
OPENAI_API_KEY=

# Google Gemini API Key
GEMINI_API_KEY=

# Ollama Configuration (for local AI models)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL (update with your backend URL)
# For local development:
VITE_API_URL=http://localhost:8000

# For production with domain:
# VITE_API_URL=https://api.yourdomain.com

# =============================================================================
# PRODUCTION DEPLOYMENT SETTINGS
# =============================================================================

# Your Domain (for production nginx)
DOMAIN=yourdomain.com

# SSL Certificate paths (if using HTTPS)
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem
