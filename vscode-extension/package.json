{
  "name": "appsec-ai-scanner",
  "displayName": "AppSec AI Security Scanner",
  "description": "Real-time security scanning with AI-powered threat detection for SAST, SCA, and Secret detection",
  "version": "1.2.0",
  "publisher": "appsec",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "security",
    "sast",
    "sca",
    "vulnerabilities",
    "appsec",
    "threat-modeling",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "appsec.login",
        "title": "AppSec: Login to Platform"
      },
      {
        "command": "appsec.logout",
        "title": "AppSec: Logout"
      },
      {
        "command": "appsec.scanWorkspace",
        "title": "AppSec: Scan Workspace",
        "icon": "$(shield)"
      },
      {
        "command": "appsec.scanFile",
        "title": "AppSec: Scan Current File"
      },
      {
        "command": "appsec.viewOnWeb",
        "title": "AppSec: View on Web Dashboard"
      },
      {
        "command": "appsec.clearFindings",
        "title": "AppSec: Clear Security Findings"
      },
      {
        "command": "appsec.refreshFindings",
        "title": "AppSec: Refresh Findings",
        "icon": "$(refresh)"
      },
      {
        "command": "appsec.applyFix",
        "title": "AppSec: Apply AI-Suggested Fix"
      },
      {
        "command": "appsec.markResolved",
        "title": "AppSec: Mark as Resolved"
      },
      {
        "command": "appsec.markFalsePositive",
        "title": "AppSec: Mark as False Positive"
      },
      {
        "command": "appsec.showDetails",
        "title": "AppSec: Show Vulnerability Details"
      },
      {
        "command": "appsec.openChatbot",
        "title": "AppSec: Open AI Assistant",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "appsec.discussWithAI",
        "title": "AppSec: Discuss with AI Assistant",
        "icon": "$(comment)"
      },
      {
        "command": "appsec.manageCustomRules",
        "title": "AppSec: Manage Custom Rules",
        "icon": "$(file-code)"
      },
      {
        "command": "appsec.viewRulePerformance",
        "title": "AppSec: View Rule Performance Dashboard"
      },
      {
        "command": "appsec.generateRuleWithAI",
        "title": "AppSec: Generate Rule with AI"
      },
      {
        "command": "appsec.refreshCustomRules",
        "title": "AppSec: Refresh Custom Rules",
        "icon": "$(refresh)"
      },
      {
        "command": "appsec.createCustomRule",
        "title": "AppSec: Create Custom Rule"
      },
      {
        "command": "appsec.editCustomRule",
        "title": "AppSec: Edit Rule"
      },
      {
        "command": "appsec.deleteCustomRule",
        "title": "AppSec: Delete Rule"
      },
      {
        "command": "appsec.toggleCustomRule",
        "title": "AppSec: Toggle Rule Enabled/Disabled"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "appsec-sidebar",
          "title": "AppSec Security",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "appsec-sidebar": [
        {
          "id": "appsecFindings",
          "name": "Security Findings"
        },
        {
          "id": "appsecCustomRules",
          "name": "Custom Rules"
        },
        {
          "id": "appsecProjects",
          "name": "Projects"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "appsec.scanWorkspace",
          "when": "view == appsecFindings",
          "group": "navigation"
        },
        {
          "command": "appsec.refreshFindings",
          "when": "view == appsecFindings",
          "group": "navigation"
        },
        {
          "command": "appsec.openChatbot",
          "when": "view == appsecFindings",
          "group": "navigation"
        },
        {
          "command": "appsec.createCustomRule",
          "when": "view == appsecCustomRules",
          "group": "navigation"
        },
        {
          "command": "appsec.generateRuleWithAI",
          "when": "view == appsecCustomRules",
          "group": "navigation"
        },
        {
          "command": "appsec.refreshCustomRules",
          "when": "view == appsecCustomRules",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "appsec.discussWithAI",
          "when": "view == appsecFindings && viewItem == vulnerability",
          "group": "inline@1"
        },
        {
          "command": "appsec.applyFix",
          "when": "view == appsecFindings && viewItem == vulnerability",
          "group": "inline@2"
        },
        {
          "command": "appsec.markResolved",
          "when": "view == appsecFindings && viewItem == vulnerability",
          "group": "actions"
        },
        {
          "command": "appsec.markFalsePositive",
          "when": "view == appsecFindings && viewItem == vulnerability",
          "group": "actions"
        },
        {
          "command": "appsec.toggleCustomRule",
          "when": "view == appsecCustomRules && viewItem == customRule",
          "group": "inline@1"
        },
        {
          "command": "appsec.editCustomRule",
          "when": "view == appsecCustomRules && viewItem == customRule",
          "group": "actions@1"
        },
        {
          "command": "appsec.deleteCustomRule",
          "when": "view == appsecCustomRules && viewItem == customRule",
          "group": "actions@2"
        }
      ]
    },
    "configuration": {
      "title": "AppSec AI Scanner",
      "properties": {
        "appsec.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "AppSec Platform API URL"
        },
        "appsec.autoScan": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan files on save"
        },
        "appsec.enableSAST": {
          "type": "boolean",
          "default": true,
          "description": "Enable Static Application Security Testing (SAST)"
        },
        "appsec.enableSCA": {
          "type": "boolean",
          "default": true,
          "description": "Enable Software Composition Analysis (SCA)"
        },
        "appsec.enableSecrets": {
          "type": "boolean",
          "default": true,
          "description": "Enable Secret Detection"
        },
        "appsec.minimumSeverity": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "default": "medium",
          "description": "Minimum severity level to show"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
