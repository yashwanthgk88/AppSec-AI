{
  "name": "appsec-platform-vscode",
  "displayName": "AppSec Platform Security Scanner",
  "description": "Real-time security scanning with SAST, SCA, and AI-powered remediation",
  "version": "1.0.0",
  "publisher": "appsec-platform",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "appsec.scanFile",
        "title": "AppSec: Scan Current File"
      },
      {
        "command": "appsec.scanWorkspace",
        "title": "AppSec: Scan Entire Workspace"
      },
      {
        "command": "appsec.openChat",
        "title": "AppSec: Open Security Chatbot"
      },
      {
        "command": "appsec.fixVulnerability",
        "title": "AppSec: Auto-Fix Vulnerability"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "appsec-sidebar",
          "title": "AppSec Platform",
          "icon": "resources/shield.svg"
        }
      ]
    },
    "views": {
      "appsec-sidebar": [
        {
          "id": "appsec.vulnerabilities",
          "name": "Vulnerabilities"
        },
        {
          "id": "appsec.chatbot",
          "name": "Security Assistant"
        }
      ]
    },
    "configuration": {
      "title": "AppSec Platform",
      "properties": {
        "appsec.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "AppSec Platform API URL"
        },
        "appsec.apiKey": {
          "type": "string",
          "default": "",
          "description": "API authentication token"
        },
        "appsec.enableRealTimeScanning": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time scanning as you type"
        },
        "appsec.scanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
